<h2>Products</h2>
<p id="notice"><%= notice %></p>
<hr>

<div>
  <% @products.each do |product| %>
    <div class="content">
      <p><%= product.name %></p>
      <p><%= product.description %></p>
      <p><%= link_to 'Show', product %></p>
      <p><%= link_to 'Edit', edit_product_path(product) %></p>
      <p><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  <% end %>
</div>
<br>
<%= link_to 'Create a New Product', new_product_path %>